{
  "name": "ntc-server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "if-env NODE_ENV=production ?? npm run start:prod || npm run start:dev",
    "start:prod": "node -r dotenv/config ./bin/www dotenv_config_path=./.env",
    "start:dev": "nodemon -r dotenv/config ./bin/www dotenv_config_path=./.env",
    "format": "prettier --write \"./**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"./**/*.{js,jsx,ts,tsx,json,md}\""
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "^4.3.4",
    "express": "~4.16.1",
    "morgan": "~1.9.1",
    "multer": "^1.4.5-lts.1",
    "dotenv": "^16.3.1",
    "if-env": "^1.0.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3"
  }
}
